{
    "name": "strictswift",
    "displayName": "StrictSwift",
    "description": "Static analysis for Swift code with auto-fix support",
    "version": "0.11.0",
    "publisher": "strictswift",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Linters",
        "Programming Languages"
    ],
    "keywords": [
        "swift",
        "linter",
        "static analysis",
        "code quality"
    ],
    "activationEvents": [
        "onLanguage:swift",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "StrictSwift",
            "properties": {
                "strictswift.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable StrictSwift linting"
                },
                "strictswift.serverPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the strictswift-lsp executable. If empty, will search in PATH."
                },
                "strictswift.configPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the StrictSwift configuration file. If empty, will search for .strictswift.yml in the workspace."
                },
                "strictswift.profile": {
                    "type": "string",
                    "enum": ["default", "strict", "lenient", "performance", "concurrency"],
                    "default": "default",
                    "description": "Analysis profile to use"
                },
                "strictswift.trace.server": {
                    "type": "string",
                    "enum": ["off", "messages", "verbose"],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the StrictSwift language server"
                }
            }
        },
        "commands": [
            {
                "command": "strictswift.restart",
                "title": "StrictSwift: Restart Language Server"
            },
            {
                "command": "strictswift.analyze",
                "title": "StrictSwift: Analyze Current File"
            },
            {
                "command": "strictswift.analyzeWorkspace",
                "title": "StrictSwift: Analyze Workspace"
            },
            {
                "command": "strictswift.fixAll",
                "title": "StrictSwift: Fix All Auto-Fixable Issues"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^20.0.0",
        "typescript": "^5.3.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/strictswift/strictswift"
    },
    "bugs": {
        "url": "https://github.com/strictswift/strictswift/issues"
    },
    "homepage": "https://github.com/strictswift/strictswift#readme"
}
